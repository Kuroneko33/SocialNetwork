@using Web.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Регистрация</h2>
<div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label for="Name">Введите Ваше имя</label>
            <input type="text" class="form-control" id="Name" placeholder="Example input">
        </div>
        <div class="form-group">
            <label for="Surname">Введите Вашу фамилию</label>
            <input type="text" class="form-control" id="Surname" placeholder="Example input">
        </div>
        <div class="form-group">
            <label for="Patronymic">Введите Ваше отчество</label>
            <input type="text" class="form-control" id="Patronymic" placeholder="Example input">
        </div>
        <div class="form-group">
            <label for="Email1">Введите Ваш Email</label>
            <input type="email" class="form-control" id="Email1" aria-describedby="emailHelp" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <label for="Email2">Введите Ваш Email еще раз</label>
            <input type="email" class="form-control" id="Email2" aria-describedby="emailHelp" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <label for="Input">Введите логин</label>
            <input type="text" class="form-control" id="Input" placeholder="Example input">
        </div>
        <div class="form-group">
            <label for="Password1">Введите ваш пароль</label>
            <input type="password" class="form-control" id="Password1" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="Password2">Введите ваш пароль еще раз</label>
            <input type="password" class="form-control" id="Password2" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Завершить регистрацию</button>
        <input type="submit" value="Завершить регистрацию" />
        <p>
            @Html.ValidationSummary(true)
        </p>
        <p>
            Логин: @Html.TextBoxFor(x => x.UsrtName) @Html.ValidationMessageFor(x => x.UsrtName)
        </p>
        <p>
            Пароль: @Html.EditorFor(x => x.Password) @Html.ValidationMessageFor(x => x.Password)
        </p>
        <p>
            Пароль еще раз: @Html.EditorFor(x => x.ConfirmPassword) @Html.ValidationMessageFor(x => x.ConfirmPassword)
        </p>
        <p>
            Email: @Html.TextBoxFor(x => x.Email) @Html.ValidationMessageFor(x => x.Email)
        </p>
        <p>
            Email еще раз: @Html.TextBoxFor(x => x.ConfirmEmail) @Html.ValidationMessageFor(x => x.ConfirmEmail)
        </p>
        <p>
            Фамилия: @Html.TextBoxFor(x => x.LastName) @Html.ValidationMessageFor(x => x.LastName)
        </p>
        <p>
            Имя: @Html.TextBoxFor(x => x.FirstName) @Html.ValidationMessageFor(x => x.FirstName)
        </p>
        <p>
            Отчество: @Html.TextBoxFor(x => x.MiddleName) @Html.ValidationMessageFor(x => x.MiddleName)
        </p>

    }
</div>
